    <script>
        // Theme handling
        document.addEventListener('DOMContentLoaded', () => {
            // Get all theme controllers (navbar and footer)
            const themeControllers = document.querySelectorAll('.theme-controller');
            
            // Function to set theme
            const setTheme = (isDark) => {
                // Update theme for document
                document.documentElement.setAttribute('data-theme', isDark ? 'dark' : 'light');
                localStorage.setItem('theme', isDark ? 'dark' : 'light');
                
                // Update all theme controllers
                themeControllers.forEach(controller => {
                    if (isDark) {
                        controller.classList.add('swap-active');
                    } else {
                        controller.classList.remove('swap-active');
                    }
                });
            };

            // Initialize theme from localStorage or system preference
            const savedTheme = localStorage.getItem('theme');
            if (savedTheme) {
                setTheme(savedTheme === 'dark');
            } else {
                setTheme(window.matchMedia('(prefers-color-scheme: dark)').matches);
            }

            // Add click handler to all theme controllers
            themeControllers.forEach(controller => {
                controller.addEventListener('click', () => {
                    const isDark = document.documentElement.getAttribute('data-theme') === 'light';
                    setTheme(isDark);
                });
            });

            // Listen for system theme changes
            window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', (e) => {
                if (!localStorage.getItem('theme')) {
                    setTheme(e.matches);
                }
            });
        });

        // Download functionality
        async function fetchVideo() {
            const videoUrl = document.getElementById('videoUrl').value.trim();
            const resultsDiv = document.getElementById('results');
            const loadingDiv = document.getElementById('loading');
            const errorDiv = document.getElementById('error');
            const errorText = document.getElementById('errorText');

            if (!videoUrl) {
                showError('Please enter a YouTube URL');
                return;
            }

            // Reset UI
            resultsDiv.innerHTML = '';
            if (errorDiv) errorDiv.classList.add('hidden');
            if (loadingDiv) loadingDiv.classList.remove('hidden');

            try {
                const response = await fetch('/download', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ url: videoUrl })
                });

                if (!response.ok) {
                    throw new Error('Failed to fetch video information');
                }

                const data = await response.json();

                if (data.error) {
                    throw new Error(data.error);
                }

                if (loadingDiv) loadingDiv.classList.add('hidden');
                renderVideoCard(data, videoUrl);

            } catch (error) {
                if (loadingDiv) loadingDiv.classList.add('hidden');
                if (errorDiv) {
                    errorDiv.classList.remove('hidden');
                    if (errorText) {
                        errorText.textContent = error.message || "An error occurred. Please try again later.";
                    }
                }
            }
        }

        function renderVideoCard(data, videoUrl) {
            const resultsDiv = document.getElementById('results');
            if (!resultsDiv) return;

            resultsDiv.innerHTML = `
                <div class="bg-base-200 rounded-2xl shadow-lg overflow-hidden">
                    ${data.thumbnail_url ? `
                        <div class="aspect-video w-full overflow-hidden">
                            <img src="${data.thumbnail_url}" 
                                 alt="Video Thumbnail" 
                                 class="w-full h-full object-cover"
                            >
                        </div>
                    ` : ''}
                    
                    <div class="p-6">
                        <h2 class="text-xl font-bold mb-2">${data.title || 'Video Title'}</h2>
                        ${data.duration ? `
                            <div class="text-sm text-base-content/70 mb-6">
                                Duration: ${data.duration}
                            </div>
                        ` : ''}

                        <div class="grid gap-3">
                            ${data.formats.map(format => `
                                <button 
                                    onclick="downloadFormat('${format.itag}', '${videoUrl}')"
                                    class="btn btn-outline btn-primary justify-between hover:gap-4 transition-all"
                                >
                                    <div class="flex items-center gap-2">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                                                d="${format.type === 'video' 
                                                    ? 'M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z'
                                                    : 'M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3'}"
                                            />
                                        </svg>
                                        <span>${format.quality} ${format.type === 'video' ? 'MP4' : 'MP3'}</span>
                                    </div>
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
                                    </svg>
                                </button>
                            `).join('')}
                        </div>
                    </div>
                </div>
            `;
        }

        function downloadFormat(itag, videoUrl) {
            const downloadUrl = `/download/${itag}?url=${encodeURIComponent(videoUrl)}`;
            window.location.href = downloadUrl;
        }

        // Social sharing function
        function shareVideo(platform, title) {
            const url = window.location.href;
            const text = `Download ${title} using ShortsDownloader.online`;
            
            const shareUrls = {
                twitter: `https://twitter.com/intent/tweet?text=${encodeURIComponent(text)}&url=${encodeURIComponent(url)}`,
                facebook: `https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(url)}`,
                whatsapp: `https://wa.me/?text=${encodeURIComponent(text + ' ' + url)}`
            };
            
            window.open(shareUrls[platform], '_blank', 'width=600,height=400');
        }

        // Register service worker
        if ('serviceWorker' in navigator) {
            window.addEventListener('load', () => {
                navigator.serviceWorker.register('/sw.js').then(registration => {
                    console.log('ServiceWorker registration successful');
                }).catch(err => {
                    console.log('ServiceWorker registration failed: ', err);
                });
            });
        }

        // Track downloads
        document.getElementById('downloadBtn').addEventListener('click', function() {
            gtag('event', 'download_video', {
                'event_category': 'engagement',
                'event_label': 'video_download'
            });
        });

        // Track format selection
        document.getElementById('formatSelect').addEventListener('change', function() {
            gtag('event', 'format_selection', {
                'event_category': 'engagement',
                'event_label': this.value
            });
        });

        // For tracking download success/failure, add these custom events in your download function
        const downloadSuccess = (format, quality) => {
            const event = new CustomEvent('downloadSuccess', {
                detail: { format, quality }
            });
            document.dispatchEvent(event);
        };

        const downloadError = (error) => {
            const event = new CustomEvent('downloadError', {
                detail: { error }
            });
            document.dispatchEvent(event);
        };

        // Add this new paste function
        function pasteFromClipboard() {
            navigator.clipboard.readText()
                .then(text => {
                    const input = document.getElementById('videoUrl');
                    input.value = text;
                    if(text.includes('youtube.com') || text.includes('youtu.be')) {
                        fetchVideo();
                    }
                })
                .catch(err => {
                    console.error('Failed to read clipboard:', err);
                });
        }

        function showError(message) {
            const errorDiv = document.getElementById('error');
            const errorText = document.getElementById('errorText');
            
            errorDiv.classList.remove('hidden');
            errorText.textContent = message;
        }
    </script>
